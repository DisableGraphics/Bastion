{
	"configurations": [
		{
			"name": "Launch with GDB",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/zig-out/bin/kernel.elf",
			"cwd": "${workspaceFolder}",
			"args": [],
			"sourceFileMap": {
				"<source-path>": "${workspaceFolder}/zig-out/bin/kernel.elf"
			},
			"targetArchitecture": "x86",
			"MIMode": "gdb",
			"miDebuggerPath": "/usr/bin/gdb",
			"miDebuggerArgs": "",
			"customLaunchSetupCommands": [
				{
					"text": "target remote localhost:1234",
					"description": "Connect to QEMU remote debugger"
				}
			],
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"text": "file ${workspaceFolder}/zig-out/bin/kernel.elf",
					"description": "Load binary."
				},
				{
					"text": "break isr_handler",
					"description": "Break on exception handler."
				}

			],
			"preLaunchTask": "Launch QEMU"
		}

	]
}